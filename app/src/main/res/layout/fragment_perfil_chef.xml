<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorRojoApp"
        >
        <ImageView
            android:id="@+id/img_PerfilChef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background= "@drawable/logo"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorBlanco"
        android:gravity="center"
        android:padding="10dp"
       >
        <TextView
            android:id="@+id/tv_nombreChefPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del chef"
            android:textSize="25dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_ChefProfesionalPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chef Profesional"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/tv_ciudadChefPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ciudad, Pais"
            android:textSize="20dp"
            android:layout_marginTop="15dp"

            />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lista_publicacionesChef">

    </ListView>


</LinearLayout>